\mode<presentation>

% Title
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}

% Frame
\setbeamercolor*{frametitle}{bg=black, fg=white}
\setbeamercolor*{date in head/foot}{bg=white, fg=black}

% Normal Text
\setbeamercolor*{normal text}{fg=black, bg=white}

% Blocks
\setbeamercolor*{structure}{bg=white, fg=black}

% Blocks
\setbeamercolor*{block title}{bg=white, fg=black}

% Alerted
\setbeamercolor{block title alerted}{fg=red_dark, bg=red_light}
\setbeamercolor{block body alerted}{bg=red_light}
\setbeamercolor*{alerted}{fg=black, bg=white}
\setbeamercolor*{alerted text}{fg=red_dark, bg=white}

% Example
\setbeamercolor{block title example}{fg=grey_dark, bg=grey_light}
\setbeamercolor{block body example}{bg=grey_light}
\mode <all>

% Theorem
\setbeamercolor{theorem title}{fg=grey_dark, bg=grey_light}
\setbeamercolor{theorem body}{bg=grey_light}
\mode <all>
